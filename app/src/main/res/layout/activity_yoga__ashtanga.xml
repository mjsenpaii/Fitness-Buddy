<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Yoga_Vinyasa">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#533634">


            <WebView
                android:id="@+id/gif_ashtanga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </WebView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:textStyle="italic|bold"
                android:textColor="#A003F4"
                android:text="Description "
                android:textSize="30dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ashtanga_txt"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:textStyle="bold|normal"
                android:layout_marginTop="280dp"
                android:textColor="#CCC4D5"
                android:layout_marginBottom="30dp"

                >

            </TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="930dp"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:textStyle="italic|bold"
                android:textColor="#9003F4"
                android:text="Benefits of Ashtanga Yoga"
                android:textSize="30dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ashtanga_benefits"
                android:textSize="25dp"
                android:paddingLeft="10dp"
                android:textStyle="bold|normal"
                android:layout_marginTop="970dp"
                android:textColor="#CDB4D1"
                android:layout_marginBottom="30dp"

                >

            </TextView>





        </RelativeLayout>

    </ScrollView>



</LinearLayout>