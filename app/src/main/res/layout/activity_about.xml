<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_100"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_100"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/gray_300"
            app:title="About Us"
            app:titleTextColor="@color/black" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Profile Image"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Fitness Buddy"
            android:textColor="@color/gray_900"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/app_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Fitness Buddy is an all-in-one mobile application designed to help you stay fit, healthy, and motivated on your fitness journey. With a wide range of features to support your exercise, diet, and overall wellness, Fitness Buddy makes it easier than ever to maintain a healthy lifestyle."
            android:textColor="@color/gray_900"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/app_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Key Features:"
            android:textColor="@color/gray_900"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/exercise_feature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:text="1. Exercise: Learn about different types of exercises tailored to your fitness goals, whether it's strength, flexibility, or endurance."
            android:textColor="@color/gray_900"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bmi_feature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:text="2. BMI Calculator: Easily track your Body Mass Index (BMI) to assess if you're within a healthy weight range."
            android:textColor="@color/gray_900"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/diet_feature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:text="3. Diet: Discover healthy food options to fuel your body, improve nutrition, and support your fitness goals."
            android:textColor="@color/gray_900"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/daily_routine_feature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:text="4. Daily Routine: Set and track your daily routines for workouts, meals, and wellness activities."
            android:textColor="@color/gray_900"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/yoga_feature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:text="5. Yoga: Learn various yoga poses and routines to improve flexibility, reduce stress, and enhance your overall well-being."
            android:textColor="@color/gray_900"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pedometer_feature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:text="6. Pedometer (Under Maintenance): Track your daily steps and activity levels (currently under maintenance)."
            android:textColor="@color/gray_900"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/app_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="App History"
            android:textColor="@color/gray_900"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/history_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="The Fitness Buddy app was created to provide users with the tools they need to improve their overall fitness, health, and well-being. Over time, it has evolved to include a variety of features designed to make fitness accessible, fun, and educational."
            android:textColor="@color/gray_900"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/developer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Developer Information"
            android:textColor="@color/gray_900"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/developer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="This app was developed by a dedicated team of mobile app development enthusiasts. Our mission is to create a fitness solution that helps users of all levels achieve their health and fitness goals."
            android:textColor="@color/gray_900"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/version_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Version Information"
            android:textColor="@color/gray_900"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/version_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Current Version: 1.0.0\nReleased on: December 9, 2024"
            android:textColor="@color/gray_900"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/facebook_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:contentDescription="Facebook Icon"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/twitter_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:contentDescription="Twitter Icon"
                android:src="@drawable/twitter" />

            <ImageView
                android:id="@+id/instagram_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:contentDescription="Instagram Icon"
                android:src="@drawable/instagram" />

            <ImageView
                android:id="@+id/youtube_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:contentDescription="Youtube Icon"
                android:src="@drawable/youtube" />

            <ImageView
                android:id="@+id/threads_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:contentDescription="Threads Icon"
                android:src="@drawable/threads" />

            <ImageView
                android:id="@+id/telegram_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:contentDescription="Telegram Icon"
                android:src="@drawable/telegram" />

            <ImageView
                android:id="@+id/github_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:contentDescription="Github Icon"
                android:src="@drawable/github" />
        </LinearLayout>

        <TextView
            android:id="@+id/contact_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Contact us at: matining.markjohn@arsu.edu.ph"
            android:textColor="@color/gray_900"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>
