<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bac_4"
    android:padding="10dp"
    tools:context=".ExerciseInfo">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Exercise Section"
        android:textAlignment="center"
        android:textColor="#9C27B0"
        android:textSize="35dp"
        android:textStyle="bold"

        ></TextView>

    <ScrollView

        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >


            <TableRow

                android:id="@+id/exc_row_1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                >

                <Button
                    android:id="@+id/Jumping_jack"
                    android:layout_width="151dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/jumping_jacks"
                    android:onClick="show_jumping_jacks"

                    >

                </Button>

                <Button
                    android:id="@+id/Mountaing_climb"
                    android:layout_width="151dp"
                    android:layout_height="118dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="200dp"
                    android:layout_marginBottom="25dp"
                    android:textSize="20dp"
                    android:background="@drawable/mountain_climbers"
                    android:onClick="mountain_climb_show"
                    >

                </Button>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:layout_width="141dp"
                    android:layout_height="27dp"
                    android:gravity="center"
                    android:text="Jumping jack"
                    android:textSize="20dp"
                    android:textColor="#FFFFF0"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="141dp"
                    android:layout_height="27dp"
                    android:layout_marginRight="200dp"
                    android:gravity="center"
                    android:text="Mountain Climber"
                    android:textAlignment="center"
                    android:textColor="#FFFFF0"
                    android:textSize="20dp"

                    android:textStyle="bold" />


            </TableRow>

            <TableRow

                android:id="@+id/exc_row_2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                >

                <Button
                    android:id="@+id/Push_up"
                    android:layout_width="151dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/push_up"
                    android:onClick="PushUp_show"
                    >

                </Button>

                <Button
                    android:id="@+id/Chrunch"
                    android:layout_width="151dp"
                    android:layout_height="118dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="200dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/chrunch"
                    android:onClick="chrunch_show"
                    >

                </Button>



            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="120dp"
                >

                <TextView
                    android:layout_width="141dp"
                    android:layout_height="27dp"
                    android:gravity="center"
                    android:text="Push Up"
                    android:textColor="#FFFFF0"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="141dp"
                    android:layout_height="27dp"
                    android:layout_marginRight="200dp"
                    android:gravity="center"
                    android:text="Crunch"
                    android:textAlignment="center"
                    android:textColor="#FFFFF0"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />


            </TableRow>

            <TableRow

                android:id="@+id/row_3"
                >

                <Button
                    android:id="@+id/jogging"
                    android:layout_width="151dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/new_jogging"
                    android:onClick="jogging_show"
                    >

                </Button>

                <Button
                    android:id="@+id/lunge_exe"
                    android:layout_width="151dp"
                    android:layout_height="118dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="200dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/new_lunge"
                    android:onClick="lunge_show"

                    >

                </Button>



            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="120dp"
                >

                <TextView
                    android:layout_width="141dp"
                    android:layout_height="27dp"
                    android:gravity="center"
                    android:text="Jogging"
                    android:textColor="#FFFFF0"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="141dp"
                    android:layout_height="27dp"
                    android:layout_marginRight="200dp"
                    android:gravity="center"
                    android:text="Lunge"
                    android:textAlignment="center"
                    android:textColor="#FFFFF0"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    />

            </TableRow>


        </TableLayout>

    </ScrollView>


</TableLayout>

