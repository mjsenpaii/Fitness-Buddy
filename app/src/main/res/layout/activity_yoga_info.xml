<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bac_4"
    tools:context=".YogaInfo">


    <TextView
        android:layout_width="329dp"
        android:layout_height="52dp"
        android:text="Yoga Section"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:textColor="#9C27B0"
        android:textSize="35dp"
        android:textStyle="bold"

        ></TextView>

    <ScrollView

        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >


            <TableRow

                android:id="@+id/exc_row_1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                >

                <Button
                    android:id="@+id/Vinyasa"
                    android:layout_width="161dp"
                    android:layout_height="154dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/vinyasa_1"
                    android:onClick="vinyasa_show"

                    >

                </Button>

                <Button
                    android:id="@+id/Ashtanga"
                    android:layout_width="161dp"
                    android:layout_height="154dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/ashtanga_1"
                    android:onClick="ashtanga_show"
                    >

                </Button>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Vinyasa"
                    android:textSize="20dp"
                    android:textColor="#FFFFF0"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="90dp"
                    android:gravity="center"
                    android:text="Ashtanga"
                    android:textAlignment="center"
                    android:textColor="#FFFFF0"
                    android:textSize="20dp"

                    android:textStyle="bold" />


            </TableRow>

            <TableRow

                android:id="@+id/exc_row_2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                >

                <Button
                    android:id="@+id/Iyengar"
                    android:layout_width="161dp"
                    android:layout_height="154dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/iyengar_1"
                    android:onClick="iyengar_show"
                    >

                </Button>

                <Button
                    android:id="@+id/Yin"
                    android:layout_width="161dp"
                    android:layout_height="154dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/yin_1"
                    android:onClick="yin_show"

                    >

                </Button>



            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="120dp"
                >

                <TextView
                    android:layout_width="199dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Iyengar"
                    android:textColor="#FFFFF0"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="90dp"
                    android:gravity="center"
                    android:text="Yin"
                    android:textAlignment="center"
                    android:textColor="#FFFFF0"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />

            </TableRow>



        </TableLayout>

    </ScrollView>


</TableLayout>

